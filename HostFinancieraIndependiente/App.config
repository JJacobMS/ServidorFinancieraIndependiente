<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="configuracionBindingNet" receiveTimeout="00:10:00"
				 sendTimeout="00:00:30" maxBufferPoolSize="5242880" maxBufferSize="5242880"
				 maxReceivedMessageSize="5242880">
					<reliableSession enabled="true" />
					<security mode="None">
						<transport clientCredentialType="None" />
						<message clientCredentialType="None" />
					</security>
				</binding>
			</netTcpBinding>
		</bindings>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true"/>
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service behaviorConfiguration="mexBehavior" name="ServidorFinancieraIndependiente.ServiciosFinancieraIndependiente">
				<endpoint address="ServidorFinancieraIndependiente" binding="netTcpBinding" bindingConfiguration="configuracionBindingNet" contract="ServidorFinancieraIndependiente.IPoliticaOtorgamiento"/>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8082"/>
						<add baseAddress="net.tcp://localhost:8081/"/>
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
</configuration>